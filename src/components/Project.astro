---
interface Props {
  name: string;
  description: string;
  technologies: string;
  link: string;
  image: any;
}

import { Image } from "astro:assets";

const { name, description, technologies, link, image } = Astro.props;
---

<div
  class={`max-w-[400px] md:max-w-[900px] h-full group rounded-md flex flex-col overflow-hidden`}
>
  <div class="overflow-hidden">
    <a href={link} target="_blank">
      <Image
        src={image}
        alt={`Example image for project ${name}`}
        class="h-full object-cover hover:scale-110 transition-all hover:opacity-80"
      />
    </a>
  </div>
  <section class="bg-[#24262d] p-6">
    <h2 class="font-bold text-4xl mb-4">{name}</h2>
    <p class="text-[#9e9fa2] mb-2">{description}</p>
    <div class="flex flex-wrap gap-2">
      <Fragment set:html={technologies} />
    </div>
  </section>
</div>
