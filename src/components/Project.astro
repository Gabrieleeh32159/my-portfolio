---
interface Props {
  name: string;
  description: string;
  technologies: Array<string>;
  image: any;
}

import { Image } from "astro:assets";

const { name, description, technologies, image } = Astro.props;
---

<section
  class={`w-full h-[630px] group rounded-2xl flex flex-col overflow-hidden border`}
>
  <Image
    src={image}
    alt={`Example image for project ${name}`}
    class="w-[auto]"
  />

  <div
    class="bg-white opacity-60 p-3 translate-y-8 group-hover:translate-y-0 transition-all"
  >
    <h2 class="font-bold text-black text-5xl">{name}</h2>
    <p class="text-slate-800">{description}</p>
  </div>
</section>
